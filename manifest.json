{
	"name": "Masked E-mails",
	"version": "1.0.0",
	"description": "Privacy first extension provides a possibility to generate offline masked e-mail in custom domain.",
	"manifest_version": 3,
	"author": "Lukasz Sliwa",
	"action": {
		"default_popup": "index.html",
		"default_title": "Masked E-mails"
	},
	"content_scripts": [{
		"css": ["main.css"],
		"matches": ["http://*/*", "https://*/*"]
	}],
	"permissions": ["activeTab", "storage"],
	"icons": {
		"16": "icon16.png",
		"24": "icon24.png",
		"32": "icon32.png",
		"64": "icon64.png",
		"128": "icon128.png"
	}
}
